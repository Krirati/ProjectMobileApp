<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/anonymous_pro_font</item>
    </style>
    <style name="AppTheme.splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>
    <style name="showusernamefont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#00FFFF</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="seachfilter">
        <item name="android:background">#CD5C5C</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="anonymous_pro_font">
        <item name="android:fontFamily">@font/anonymous_pro</item>
    </style>
    <style name="MyMainRoundedActionButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/whiht</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_gender</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
</resources>
